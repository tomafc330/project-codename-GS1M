<%= form_for(Listing.new, :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>

  <div class="clearfix">
    <label>Email Address:</label>
    <div class="input">
      <%= f.text_field :email, :class => 'xlarge error' %>
      <span class="help-inline">Enter your e-mail address so you can edit the listing later.</span>
    </div>
  </div>

  <div class="clearfix">
    <label>Sale Address:</label>
    <div class="input">
      <%= f.text_field :address, :class => 'xlarge error' %>
      <span class="help-inline">Enter the sale's location.</span>
    </div>
  </div>

  <div class="clearfix">
    <label>Start Date</label>
    <div class="input">
      <%= f.date_select :start_time , :class => 'xlarge' %>
      <span class="help-inline">Enter the sale's start date.</span>
    </div>
  </div>

  <div class="clearfix">
    <label>Start Time</label>

    <div class="input">

      <%= select_time Time.new(2011, 1, 1, 10), :prefix => "start_time" %>
      <span class="help-inline">Enter the sale's start time.</span>
    </div>

  </div>

  <div class="clearfix">
    <label>End Time</label>
    <div class="input">
      <%= select_time Time.new(2011, 1, 1, 16), :prefix => "end_time" %>
      <span class="help-inline">Enter the sale's end time.</span>
    </div>
  </div>


  <div class="clearfix">
    <label for="fileInput">File Input:</label>

    <div class="input">
      <%= file_field_tag :image, :class => 'input-file' %>
      <span class=
            "help-inline">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Provide
        an image of the sale items.</span>
    </div>
  </div><!-- /clearfix -->

  <div class="clearfix">
    <label>Description:</label>
    <div class="input">
      <%= f.text_area :description, :class => 'xxlarge', :style => '', :rows => 5 %>
      <span class="help-block">To increase your success by 63%, please give a brief
        description of the item's for sale. (150 characters max)</span>
    </div>
  </div>

  <div class="clearfix">

    <%#*<div class="input">%>
      <%#= f.label "Categories" %><br />
      <%# for category in Category.all %>
        <%#= check_box_tag 'article[category_ids][]', category.id,
          @article.category_ids.include?(category.id), :id => dom_id(category) %>
        <%#= label_tag dom_id(category), category.name, :class => "check_box_label" %>
      <%# end %>
    <%#*</div>%>

    <label>List of Options</label>

    <div class="input">
      <ul class="inputs-list">
        <li><label><input type="radio" name="come-early" value="option1" />
            <span>Yes, people can come earlier than the time
              specified.</span></label></li>

        <li><label><input type="radio" name="come-early" value="option2" />
            <span>No early birds please.</span></label></li>
      </ul><span class="help-block">Indicate whether people can come earlier
        than the time specified.</span>
    </div>
  </div><!-- /clearfix -->

  <div class="actions">
    <%= f.submit :class => 'btn large primary' %>
    <input id="cancel-post-btn" type="submit" class="btn large primary" value="Cancel"/>
  </div>
<% end  %>